<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ffffff"
    app:behavior_hideable="true"
    app:behavior_peekHeight="5dp"
    app:elevation="6dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/top_shadow_bottom_sheet"
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/amountMode">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Discount?"
        android:layout_marginTop="8dp"
        />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:buttonTint="@color/colorPrimary"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Percent"
                android:buttonTint="@color/colorPrimary"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:buttonTint="@color/colorPrimary" />
        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/amountMode"
        android:id="@+id/discountSection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount Amount"
            android:id="@+id/discountTypeCheck"
            android:layout_marginTop="18dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discountEdit"
            android:layout_alignParentRight="true"
            android:ems="7"
            android:backgroundTint="@color/textColor"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/discountSection"
        android:id="@+id/totalAmountSection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:layout_marginTop="18dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalAmount"
            android:layout_alignParentRight="true"
            android:ems="7"
            android:backgroundTint="@color/textColor"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/totalAmountSection"
        android:id="@+id/receivedAmountSection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Amount"
            android:layout_marginTop="18dp"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receivedAmount"
            android:layout_alignParentRight="true"
            android:ems="7"
            android:backgroundTint="@color/textColor"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/receivedAmountSection"
        android:id="@+id/remainingAmountSection">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Amount"
            android:layout_marginTop="18dp"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remainingAmount"
            android:layout_alignParentRight="true"
            android:ems="7"
            android:backgroundTint="@color/textColor"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/remainingAmountSection"

        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSheetDone"
        android:text="Done"

        />
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>